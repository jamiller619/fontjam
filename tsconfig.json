{
  "compilerOptions": {
    "rootDir": ".",

    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

    "lib": ["ESNext"],
    "skipLibCheck": true,

    "jsx": "preserve",
    "newLine": "lf",
    "noErrorTruncation": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  },
  "exclude": ["node_modules", "dist"]
}
