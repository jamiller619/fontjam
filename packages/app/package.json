{
  "name": "@fontjam/app",
  "version": "0.0.1",
  "main": "dist/index.js",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn electron .",
    "start:dev": "yarn electron --trace-warnings .",
    "dx": "yarn clean && yarn concurrently --n renderer,main,preload \"yarn dx:renderer\" \"yarn dx:main\" \"yarn build:preload\"",
    "dx:main": "yarn build:main --watch --onSuccess \"yarn start:dev\"",
    "dx:renderer": "yarn vite",
    "build": "yarn clean && yarn build:preload && yarn build:main && yarn build:renderer",
    "build:main": "yarn tsup --tsconfig src/main/tsconfig.json src/main/index.ts src/main/providers/LocalProvider.worker.ts src/main/providers/defaults.worker.ts --loader \".env=text\" --loader \".sql=text\" --external electron --format esm",
    "build:preload": "yarn tsup --tsconfig src/preload/tsconfig.json src/preload/preload.ts --external electron --format cjs",
    "build:config": "yarn json2ts src/shared/config/schema.json src/shared/config/schema.ts",
    "build:renderer": "yarn vite build",
    "clean": "yarn rimraf dist"
  },
  "devDependencies": {
    "@types/css-font-loading-module": "^0.0.10",
    "@types/dom-view-transitions": "^1.0.3",
    "@types/opentype.js": "^1.3.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@types/react-window": "^1.8.7",
    "@types/styled-components": "^5.1.29",
    "@types/wicg-file-system-access": "^2023.10.2",
    "@vitejs/plugin-react": "^4.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "electron": "^28.0.0-beta.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "json-schema-to-typescript": "^13.1.1",
    "typed-emitter": "^2.1.0",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@fluentui/react-icons": "^2.0.221",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/themes": "^2.0.0",
    "@tanstack/react-virtual": "^3.0.0-beta.68",
    "conf": "^12.0.0",
    "dotenv": "^16.3.1",
    "env-paths": "^3.0.0",
    "fastq": "^1.15.0",
    "file-type": "^18.7.0",
    "fuse.js": "^7.0.0",
    "just-debounce": "^1.1.0",
    "logger": "git+https://github.com/jamiller619/logger.git",
    "monaco-editor": "^0.44.0",
    "opentype.js": "^1.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-drag-to-select": "^1.0.3-rc01",
    "react-intersection-observer": "^9.5.2",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.17.0",
    "sql-template-tag": "^5.1.0",
    "sqlite3": "^5.1.6",
    "styled-components": "^6.1.0",
    "swr": "^2.2.4",
    "usehooks-ts": "^2.9.1"
  }
}
